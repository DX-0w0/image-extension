{
  "manifest_version": 3,
  "name": "Image Sauce Extract",
  "version": "1.0",
  "description": "Download images",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/scanner_16.png",
      "48": "icons/scanner_48.png",
      "128": "icons/scanner_128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/scanner_16.png",
    "48": "icons/scanner_48.png",
    "128": "icons/scanner_128.png"
  },
  "permissions": ["storage", "tabs", "activeTab", "scripting", "downloads"],
  "host_permissions": ["<all_urls>"]
}
